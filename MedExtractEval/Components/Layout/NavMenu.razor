@implements IDisposable
@inject NavigationManager NavigationManager

<div class="top-row navbar navbar-dark px-3 border-bottom">
    <div class="container-fluid px-0">
        <a class="navbar-brand fw-semibold d-flex align-items-center gap-2" href="">
            <span class="bi bi-clipboard2-pulse"></span>
            MedExtractEval
        </a>

        <button class="navbar-toggler d-md-none" type="button" title="Toggle navigation"
                @onclick="ToggleMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="nav-scrollable @(isMenuOpen ? "show" : "")" @onclick="AutoCloseOnMobile">
    <nav class="nav flex-column py-2">

        <div class="px-3 pt-2 pb-1 text-uppercase text-muted small" style="letter-spacing:.08em;">
            Workspace
        </div>

        <NavLink class="nav-link px-3" href="" Match="NavLinkMatch.All">
            <span class="bi bi-house-door me-2" aria-hidden="true"></span>
            Home
        </NavLink>

        <AuthorizeView>
            <Authorized>
                <NavLink class="nav-link px-3" href="annotation">
                    <span class="bi bi-pencil-square me-2" aria-hidden="true"></span>
                    Annotation
                </NavLink>

                <NavLink class="nav-link px-3" href="workflow">
                    <span class="bi bi-kanban me-2" aria-hidden="true"></span>
                    Workflow Manager
                </NavLink>

                <NavLink class="nav-link px-3" href="adjudication">
                    <span class="bi-check2-circle me-2" aria-hidden="true"></span>
                    Adjudication
                </NavLink>

                <div class="px-3 pt-3 pb-1 text-uppercase text-muted small" style="letter-spacing:.08em;">
                    Account
                </div>

                <NavLink class="nav-link px-3" href="Account/Manage">
                    <span class="bi bi-person-circle me-2" aria-hidden="true"></span>
                    @context.User.Identity?.Name
                </NavLink>

                <div class="px-3">
                    <form action="Account/Logout" method="post" class="m-0">
                        <AntiforgeryToken />
                        <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                        <button type="submit" class="btn btn-link nav-link px-0 text-start w-100">
                            <span class="bi bi-box-arrow-right me-2" aria-hidden="true"></span>
                            Logout
                        </button>
                    </form>
                </div>
            </Authorized>

            <NotAuthorized>
                <div class="px-3 pt-2 pb-1 text-uppercase text-muted small" style="letter-spacing:.08em;">
                    Account
                </div>

                <NavLink class="nav-link px-3" href="Account/Register">
                    <span class="bi bi-person-plus me-2" aria-hidden="true"></span>
                    Register
                </NavLink>

                <NavLink class="nav-link px-3" href="Account/Login">
                    <span class="bi bi-box-arrow-in-right me-2" aria-hidden="true"></span>
                    Login
                </NavLink>
            </NotAuthorized>
        </AuthorizeView>

    </nav>
</div>

@code {
    private string? currentUrl;
    private bool isMenuOpen; // for mobile

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    private void ToggleMenu()
        => isMenuOpen = !isMenuOpen;

    private void AutoCloseOnMobile()
    {
        // 小屏才自动收起（Bootstrap md=768px）
        // 这里不做 JS 判断宽度，简单策略：点击后就收起，桌面侧边栏通常不会触发点击背景
        isMenuOpen = false;
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}
